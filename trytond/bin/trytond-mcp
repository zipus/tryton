#!/usr/bin/env python3
# -*- coding: utf-8 -*-
"""Command line entry point for the Tryton MCP bridge server."""

import os
import sys


DIR = os.path.abspath(os.path.normpath(os.path.join(__file__, "..", "..", "trytond")))
if os.path.isdir(DIR):
    sys.path.insert(0, os.path.dirname(DIR))

from trytond.tools import mcp


if __name__ == "__main__":
    raise SystemExit(mcp.run_server())

